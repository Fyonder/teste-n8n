# -------------------------------
# Autenticação do n8n
# -------------------------------
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin           # usuário do n8n
N8N_BASIC_AUTH_PASSWORD=admin123    # senha do n8n

# -------------------------------
# Host e Porta
# -------------------------------
N8N_HOST=0.0.0.0
N8N_PORT=$PORT                      # Render define a porta automaticamente

# -------------------------------
# Webhooks e timezone
# -------------------------------
WEBHOOK_URL=https://<SEU-SERVICO>.onrender.com
GENERIC_TIMEZONE=America/Sao_Paulo
